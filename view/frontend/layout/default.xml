<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" ifconfig="sgform/general/enable" name="sg-contact-us-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">SG Contact Us</argument>
                    <argument name="path" xsi:type="string">syncit-group-form</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
